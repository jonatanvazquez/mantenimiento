<div class="page-header">
      <h1 class="page-title">Administración de Usuarios</h1>
      <div class="breadcrumb">
        <button type="button" class="btn btn-sm btn-primary btn-round" onclick="window.open('/maquinas', '_self')">
        <i class="icon md-chevron-left" aria-hidden="true"></i>
          <span class="text hidden-sm-down">Regresar a Maquinas</span>
        </button>
      </div>
    </div>
    <div class="page-content container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="panel">
          <div class="panel-body">
          <table class="table table-hover" id="usuarios">
            <thead>
              <tr>
                <th>Usuario</th>
                <th>Contraseña</th>
                <th>Rol</th>
                <th>Correo</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              {{#each usuarios}}
                {{> usuario admin=../admin}}
              {{/each}}
            </tbody>
          </table>
          </div>
        </div>
        <!-- End Example Panel With Heading -->
      </div>
    </div>
    </div>

      </div>
  <!-- Site Action -->
  <div class="site-action" data-target="#addProjectForm" data-toggle="modal" data-plugin="actionBtn">
    <button type="button" data-action="add" class="site-action-toggle btn-raised btn btn-success btn-floating">
      <i class="icon md-plus" aria-hidden="true"></i>
    </button>
  </div>
  <!-- End Site Action -->
  <!-- Add Project Form -->
  <div class="modal fade" id="addProjectForm" aria-hidden="true" aria-labelledby="addProjectForm"
  role="dialog" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" aria-hidden="true" data-dismiss="modal">×</button>
          <h4 class="modal-title" id="tituloc">AGREGAR USUARIO</h4>
        </div>
        <div class="modal-body" style="margin-bottom: 120px;">
          <form action="#" method="post" role="form" id="nuevamaquina" class="form-horizontal">
            <div class="form-group form-material">
              <label class="form-control-label col-sm-4" for="name">CORREO:</label>
              <div class="col-sm-8">
                <input type="text" class="form-control" id="email" name="email" placeholder="correo@correo.com" required></div>
            </div>
            <div class="form-group form-material">
              <label class="form-control-label col-sm-4" for="name">USUARIO:</label>
              <div class="col-sm-8">
                <input type="text" class="form-control" id="username" name="username" placeholder="Nombre" required></div>
                <input type="hidden" class="form-control" name="id" id="id" readonly="">
            </div>
            <div class="form-group form-material">
              <label class="form-control-label col-sm-4" for="name">PASSWORD:</label>
              <div class="col-sm-8">
                <input type="text" class="form-control" id="password" name="password" placeholder="Clave" required></div>
            </div>
            <div class="form-group form-material">
              <label class="form-control-label col-sm-4" for="name">ÁREA:</label>
              <div class="col-sm-8"><input type="text" class="form-control" id="area" name="area" placeholder="Área" required value="{{sess.area}}"></div>
            </div>
            <div class="form-group form-material">
              <label class="form-control-label col-sm-4" for="name">ROL</label>
              <div class="col-sm-8">
                <select class="form-control" data-plugin="select2" name="rol" id="rol" data-allow-clear="true">
                    <option>Rol</option>
                      <option value="admin">Administrador General</option>
                      <option value="admin-area">Administrador Área</option>
                      <option value="user">Usuario</option>
                  </select></div>
            </div>

           </form>
        </div>
        
        <div class="modal-footer text-xs-right">
          <button class="btn btn-primary" data-dismiss="modal" type="button" onclick="registrarusuario();" id="guardar">Crear</button>
          <a class="btn btn-sm btn-white btn-pure" data-dismiss="modal" href="javascript:void(0)">Cancelar</a>
        </div>
        
      </div>
    </div>